<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.youle.dao.OrderSettingDao">
    <insert id="add" parameterType="com.youle.pojo.OrderSetting">
        insert into t_ordersetting(orderDate,number,reservations) values (#{orderDate},#{number},#{reservations})
    </insert>
    <update id="edit" parameterType="com.youle.pojo.OrderSetting">
        update t_ordersetting set number = #{number} where orderDate = #{orderDate}
    </update>
    <update id="editReservationsByOrderDate" parameterType="com.youle.pojo.OrderSetting">
        update t_ordersetting set reservations = #{reservations} where orderDate = #{orderDate}
    </update>
    <select id="findCountByOrderDate" resultType="java.lang.Long">
        select count(*) from t_ordersetting where orderDate = #{orderDate}
    </select>
    <select id="getOrderSettingByMonth" resultType="com.youle.pojo.OrderSetting" parameterType="map">
        select * from t_ordersetting where orderDate between #{dateBegin} and #{dateEnd}
    </select>
    <select id="findByOrderDate" parameterType="date" resultType="com.youle.pojo.OrderSetting">
        select * from t_ordersetting where orderDate = #{orderDate}
    </select>
</mapper>